{
    "name": "ciphora",
    "version": "1.2.0",
    "type": "module",
    "description": "Ciphora - 安全密码管理器，支持MFA、Base64数据存储和加密备份",
    "main": "main.cjs",
    "scripts": {
        "start": "electron .",
        "dev": "npm run electron:dev",
        "build": "npm run build:all",
        "build:all": "npm run vite:build && electron-builder --win --mac --linux",
        "build:win": "npm run vite:build && electron-builder --win",
        "build:win:32": "npm run vite:build && electron-builder --win --ia32",
        "build:win:64": "npm run vite:build && electron-builder --win --x64",
        "build:mac": "npm run vite:build && electron-builder --mac",
        "build:mac:arm64": "npm run vite:build && electron-builder --mac --arm64",
        "build:mac:x64": "npm run vite:build && electron-builder --mac --x64",
        "build:linux": "npm run vite:build && electron-builder --linux",
        "build:linux:32": "npm run vite:build && electron-builder --linux --ia32",
        "build:linux:64": "npm run vite:build && electron-builder --linux --x64",
        "build:dir": "npm run vite:build && electron-builder --dir",
        "build:dist": "npm run vite:build && electron-builder --publish=never",
        "postinstall": "electron-builder install-app-deps",
        "build-css": "tailwindcss -i ./src/input.css -o ./dist/output.css",
        "watch-css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
        "vite:dev": "vite",
        "vite:build": "vite build",
        "vite:preview": "vite preview",
        "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run vite:dev\" \"wait-on tcp:3000 && nodemon\"",
        "electron:build": "npm run vite:build && electron-builder",
        "clean": "rimraf dist release",
        "clean:all": "rimraf dist release node_modules/.cache",
        "stop": "taskkill /f /im node.exe & taskkill /f /im electron.exe",
        "release": "npm run clean && npm run build:all",
        "release:win": "npm run clean && npm run build:win",
        "release:mac": "npm run clean && npm run build:mac",
        "release:linux": "npm run clean && npm run build:linux"
    },
    "keywords": [
        "password-manager",
        "security",
        "encryption",
        "mfa",
        "electron",
        "cross-platform"
    ],
    "author": "Ciphora Team",
    "license": "MIT",
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.12",
        "@tailwindcss/vite": "^4.1.12",
        "@vitejs/plugin-react": "^5.0.2",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.2.1",
        "cross-env": "^10.0.0",
        "electron": "^25.0.0",
        "electron-builder": "^24.0.0",
        "nodemon": "^3.1.10",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.12",
        "vite": "^7.1.4",
        "wait-on": "^8.0.4"
    },
    "dependencies": {
        "@heroicons/react": "^2.2.0",
        "clsx": "^2.1.1",
        "qrcode": "^1.5.3",
        "jsqr": "^1.4.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "speakeasy": "^2.0.0",
        "tailwind-merge": "^3.3.1",
        "xlsx": "^0.18.5"
    },
    "build": {
        "appId": "com.ciphora.password-manager",
        "productName": "Ciphora",
        "directories": {
            "output": "release"
        },
        "files": [
            "main.cjs",
            "server",
            "public",
            "dist",
            "preload.js",
            "index.html",
            "res/logo.ico",
            "res/logo.png",
            "package.json"
        ],
        "win": {
            "target": "nsis",
            "icon": "res/logo.ico",
            "requestedExecutionLevel": "asInvoker"
        },
        "mac": {
            "target": "dmg",
            "icon": "res/logo.icns",
            "category": "public.app-category.productivity"
        },
        "linux": {
            "target": "AppImage",
            "icon": "res/logo.ico",
            "category": "Utility"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/your-username/ciphora"
    },
    "bugs": {
        "url": "https://github.com/your-username/ciphora/issues"
    },
    "homepage": "https://github.com/your-username/ciphora"
}